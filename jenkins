pipeline {

    options {
        buildDiscarder(logRotator(numToKeepStr: '5', artifactNumToKeepStr: '5'))
    }

    agent { label 'jenkinproductA' }

    tools {
        maven 'maven_3.8.8'
    }

    stages {
        stage('mvn version') {
            steps{
                echo 'code compilation is starting'
                sh 'mvn --version'
				echo 'Hi, MVN'
            }
       }
        stage('mvn compile'){
            steps{
                sh "mvn clean compile"
                echo "code compilation completed"
            }
        }
        stage('mvn package'){
            steps{
                sh "mvn clean package"
                echo "code artifact ready"
            }
        }
    }
}
